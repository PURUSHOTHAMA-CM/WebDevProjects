                <hr>
    We help you analyze crypto markets, providing valuable information.
                    Also reducing the overhead of searching coins
</pre>
</div>
    <br>

<!-- DETAILS ON THE GLOBAL CRYPTO MARKET  -->

    <div class="outerM">
        <h2 class="heading2">Get Started</h2>
    <div class="market">
    <form action="/get-marketdata" method="post">
        <input type="submit" value="EXPLORE MARKETS" name="MARKET" id="marketdata">
    </form>
    </div>

<!-- DETAILS WILL BE PRINTED HERE -->

    <div class="marketcontent">
        <% if(locals.Marketinfo) {%> 
                <table class="marketTable">
                    <tr>
                        <th>COINS COUNT</th>
                        <th>Market CAP</th>
                        <th>VOLUME</th>
                        <th>MARKETCAP CHANGE</th>
                        <th>VOLUME CHANGE</th>

                    </tr>
                    <% Marketinfo.forEach(detail => { %>
                        <tr>
                            <td class="marketi">
                                <%= detail.coins_count %>
                            </td>
                            <td class="marketi">
                                <%= detail.total_mcap %>
                            </td>
                            <td class="marketi">
                                <%= detail.total_volume %>
                            </td>
                            <td class="marketi">
                                <%= detail.mcap_change %>
                            </td>
                            <td class="marketi">
                                <%= detail.volume_change %>
                            </td>
                        </tr>
                        
                   <% }) %>
                </table>
            </p>
        <% } else { %>
            <p class="marketi">Find Your Data Here :</p>
        <% } %>
    </div>
</div>

</div>

<!-- DETAILS ON CRYPTO COINS -->

<div class="outerC">
    <h2 class="heading2">Explore Coins</h2>
    <div class="cryptodatarange">
        <marquee behavior="scroll" direction="left" class="mrq">* explore coins of your desired range according to their rank üîçüîç .</marquee>
        <form action="/get-cryptodata" method="post" id="coinsForm">
            
            <label for="start">Starting Rank:</label>
            <input type="number" placeholder="Starting Rank" name="start" id="start" class="inputs">

            
            <label for="limit">Limit:</label>
            <input type="number" placeholder="1-100" name="limit" id="limit" class="inputs">
       
            <input type=submit name="submit" value="Find" id="findCoin">
        </form>
    </div>
    <div class="allcoindata">
        <% if(locals.allCoinInfo) {%>
            <table class="allCoinTable">
                <tr>
                    <th>SYMBOL</th>
                    <th>NAME</th>
                    <th>RANK</th>
                    <th>PRICE-USD</th>
                    <th>MARKETCAP</th>
                    <th>VOLUME</th>
                    <th>% CHANGE 7D</th>

                </tr>
                <% allCoinInfo.data.forEach(detail => { %>
                    <tr>
                        <td class="marketi">
                            <%= detail.symbol %>
                        </td>
                        <td class="marketi">
                            <%= detail.name %>
                        </td>
                        <td class="marketi">
                            <%= detail.rank %>
                        </td>
                        <td class="marketi">
                            <%= detail.price_usd %>
                        </td>
                        <td class="marketi">
                            <%= detail.market_cap_usd %>
                        </td>
                        <td class="marketi">
                            <%= detail.volume24 %>
                        </td>
                        <td class="marketi">
                            <%= detail.percent_change_7d %>
                        </td>
                    </tr>
                    
               <% }) %>
            </table>
        <% } else { %>
            <p class="marketi">Find Your Coins Data Here :</p>
        <% } %>
    </div>
        <br>
    </div>
        <!--FIND COIN BY name  -->

<div class="outerN">
    <div class="cryptodataname">
        <h3 class="heading3">Get Coin Data by Name</h3>
        <form action="/get-byname" method="post" id="SymbolForm">

            <label for="cName"> COIN SYMBOL:</label>
            <input type="text" placeholder="Ex: BTC-USD" name="cName" id="coinname" class="inputs">

            <input type=submit name="submit" value="Find" id="findCoin">
        </form>
    </div>
    <div class="singlecoin">
        <% if(locals.singleCoinInfo) {%>
            <table class="allCoinTable">
                <tr>
                    <th>SYMBOL</th>
                    <th>PRICE-24H</th>
                    <th>VOLUME-24H</th>
                    <th>LAST TRADED PRICE</th>

                </tr>
                    <tr>
                        <td class="marketi">
                            <%= singleCoinInfo.symbol %>
                        </td>
                        <td class="marketi">
                            <%= singleCoinInfo.price_24h %>
                        </td>
                        <td class="marketi">
                            <%= singleCoinInfo.volume_24h %>
                        </td>
                        <td class="marketi">
                            <%= singleCoinInfo.last_trade_price %>
                        </td>
                    </tr>
            </table>


        <% } else { %>
            <p class="marketi">Find Your Coin Data Here :</p>
        <% } %>
    </div>
</div>

